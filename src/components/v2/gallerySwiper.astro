<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
        />
    </head>
    <body class="">
        <style>
            *,
            *::after,
            *::before {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
                font-family: "Syncopate", sans-serif;
            }

            .page2-heading {
                padding-top: 10rem;
                padding-bottom: 2rem;
            }
            .v2-page2-container {
                display: flex;
                align-items: center;
                justify-content: center;
                color: white;
                overflow: hidden;
                width: 100vw;
            }

            .swiper {
                width: 100%;
                height: 100%;
                padding: 50px 0;
            }

            .swiper-slide {
                position: relative;
                width: 400px;
                aspect-ratio: 16/9;
                border-radius: 14px;
                border: 1px solid black;
            }
            .swiper-slide img {
                display: block;
                width: 100%;
                height: 100%;
                object-fit: cover;
                border-radius: inherit;
                user-select: none;
            }

            .title {
                position: absolute;
                bottom: 5px;
                left: 50%;
                transform: translate(-50%, -20%);
                -ms-transform: translate(-50%, -20%);
                width: max-content;
                text-align: center;
                padding: 10px 18px;
                background: rgba(46, 39, 39, 0.3);
                border-radius: 8px;
                border: 2px solid rgba(177, 177, 177, 0.4);
                box-shadow: 0 4px 30px rbga(0, 0, 0, 0.2);
                backdrop-filter: blur(10px);
                -webkit-backdrop-filter: blur(10px);
                transition: all 0.5s linear;
            }

            .title span {
                font-size: 1.2rem;
                font-weight: 600;
            }

            .swiper-slide-active .title {
                bottom: -10px;
                box-shadow: 0 20px 30px 2px rgba(0, 0, 0, 0.6);
            }

            .swiper-pagination-bullet {
                widht: 14px;
                height: 14;
                background: #000;
                border-radius: 50%;
                transition: all 0.3s ease-in-out;
            }

            .swiper-pagination-bullet-active {
                width: 32px;
                border-radius: 14px;
            }

            @media (max-width: 1100px) {
                .swiper-slide {
                    width: 300px;
                }
            }
            @media (max-width: 900px) {
                .swiper-slide {
                    width: 300px;
                }
            }

            @media (max-width: 700px) {
                .swiper-slide {
                    width: 230px;
                }
            }
            @media (max-width: 610px) {
                .swiper-slide {
                    width: 200px;
                }
            }
        </style>

        <h1 class="text-5xl page2-heading text-center mt-2 font-extrabold">
            Our Gallery
        </h1>
        <div class="v2-page2-container h-3/4">
            <div class="swiper">
                <div class="swiper-wrapper">
                    <div class="swiper-slide">
                        <img src="/hero.webp" alt="" />
                        <div class="title">
                            <span>Making Smiles</span>
                        </div>
                    </div>
                    <div class="swiper-slide">
                        <img src="/hero2.webp" alt="" />
                        <div class="title">
                            <span>Doctor</span>
                        </div>
                    </div>
                    <div class="swiper-slide">
                        <img src="/page2.webp" alt="" />
                        <div class="title">
                            <span>ToothBrush</span>
                        </div>
                    </div>
                    <div class="swiper-slide">
                        <img src="/board.webp" alt="" />
                        <div class="title">
                            <span>Board</span>
                        </div>
                    </div>
                    <div class="swiper-slide">
                        <img src="/smile.webp" alt="" />
                        <div class="title">
                            <span>Smile</span>
                        </div>
                    </div>
                </div>
                <div class="swiper-pagination"></div>
            </div>
        </div>

        <script
            defer
            src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"
        ></script>
        <script>
            let swiper = new Swiper(".swiper", {
                effect: "coverflow",
                grabCursor: true,
                centeredSlides: true,
                initialSlides: 2,
                speed: 600,
                preventClicks: true,
                slidesPerView: "auto",

                coverflowEffect: {
                    rotate: 0,
                    stretch: 80,
                    depth: 350,
                    modifier: 1,
                    slideShadows: true,
                },
                on: {
                    click(event) {
                        swiper.slideTo(this.clickedIndex);
                    },
                },
                pagination: {
                    el: ".swiper-pagination",
                },
            });
        </script>
    </body>
</html>
