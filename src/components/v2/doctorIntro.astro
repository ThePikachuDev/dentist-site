---
// doctorIntro.astro
import gsap from 'gsap';
---

<style>
        .animated-text {
        width: fit-content;
        overflow: hidden;
        font-family: "Syncopate", sans-serif;
        font-weight: 900;
        font-style: normal;
    }
    /**/
    /* .animated-text h1 { */
    /*     transform: translateY(100%); */
    /* } */
    /**/

    #animated-btn {
        transition: all 0.5s ease;

        font-family: "Syncopate", sans-serif;
    }

    #animated-btn:hover {
        z-index: 99;
        color: white;
    }

    #btn-cover {
        transition: all .6s ease  ;
    }
    #animated-btn:hover #btn-cover {
        left: 0;
        /* transition: all 0.5s ease; */
    }
    #animated-btn:hover img {
        z-index: 99;
        transition: all cubic-bezier(0.19, 1, 0.22, 1) 0.5s;
        rotate: 90deg;
        filter: invert(1);
    }

  .doctor-card {
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05), 0 2px 4px -1px rgba(0, 0, 0, 0.02);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .doctor-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.05), 0 4px 6px -2px rgba(0, 0, 0, 0.02);
  }

  .specialty-badge {
    transition: all 0.2s ease;
  }

  .specialty-badge:hover {
    transform: translateY(-2px);
  }

  .contact-button {
    transition: all 0.2s ease;
  }

  .contact-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }

  @media (max-width: 768px) {
    .doctor-container {
      flex-direction: column;
    }
  }
</style>

<div class="max-w-6xl mx-auto px-4 py-16" id="doctor-component">
  <div class="flex flex-col lg:flex-row doctor-container gap-12 items-center">
    <!-- Doctor Photo -->
    <div class="w-full lg:w-1/3">
      <div class="doctor-card bg-white rounded-lg overflow-hidden border border-gray-100">
        <img 
          src="face.webp" 
          alt="Dr. Yukti Ghei Gupta"
          class="w-full h-auto object-cover"
        />
        <div class="p-6 text-center">
          <h3 class="text-2xl font-semibold text-gray-900">Dr. Yukti Ghei Gupta</h3>
          <p class="text-gray-600 mt-1">B.D.S, M.D.S</p>
          <div class="mt-4 flex justify-center space-x-2">
            <span class="bg-gray-100 text-blue-800 text-xs font-semibold px-2.5 py-0.5 rounded">Cosmetic Dentist</span>
            <span class="bg-gray-100 text-green-800 text-xs font-semibold px-2.5 py-0.5 rounded">Pediatric Dentist</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Doctor Details -->
    <div class="w-full lg:w-2/3">
      <div class="bg-white p-8 rounded-lg border border-gray-100">
        <h2 class="text-3xl font-bold text-gray-900 mb-2">Professional Dentist with a Gentle Touch</h2>
        <p class="text-gray-600 mb-6">Specialized dental care combining expertise with compassionate treatment.</p>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
          <div>
            <h3 class="text-xl font-semibold text-gray-900 mb-3">Specializations</h3>
            <ul class="space-y-2">
              <li class="flex items-center">
                <span class="mr-2">üòÅ</span>
                <span>Cosmetic Dentistry</span>
              </li>
              <li class="flex items-center">
                <span class="mr-2">üßí</span>
                <span>Children (Pediatric) Dentistry</span>
              </li>
              <li class="flex items-center">
                <span class="mr-2">ü¶∑</span>
                <span>Root Canal Specialist</span>
              </li>
            </ul>
          </div>

          <div>
            <h3 class="text-xl font-semibold text-gray-900 mb-3">Clinics</h3>
            <ul class="space-y-3">
              <li class="flex items-start">
                <svg class="flex-shrink-0 h-5 w-5 text-gray-500 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <span class="ml-2">Kmaxx American Hospital</span>
              </li>
              <li class="flex items-start">
                <svg class="flex-shrink-0 h-5 w-5 text-gray-500 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <span class="ml-2">Dr. Ved Gupta Hospital, Mall Road, Amritsar</span>
              </li>
            </ul>
          </div>
        </div>

        <div class="flex flex-col sm:flex-row gap-4">
          <button
        id="animated-btn"
        type="submit"
        class="border-2 w-fit h-fit relative flex gap-3 overflow-hidden cursor-pointer rounded-xl px-5 py-4"
    >
        <div
            id="btn-cover"
            class="w-full h-full z-[-1] ease-in-out absolute top-0 -left-100 bg-black"
        >
        </div>
        <span>Book Appointment</span>
        <img src="/arrow-up-solid.svg" class="w-6 h-6 rotate-45" alt="" />
    </button>
    <!-- <button class="contact-button flex-1 border border-blue-600 text-blue-600 font-medium py-3 px-6 rounded-lg hover:bg-blue-50 flex items-center justify-center"> -->
    <!--         <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"> -->
    <!--           <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path> -->
    <!--         </svg> -->
    <!--         Book Appointment -->
    <!--       </button> -->
        </div>
      </div>
    </div>
  </div>
</div>

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    // Simple fade-in animation for the component
    gsap.from('#doctor-component', {
      duration: 0.8,
      opacity: 0,
      y: 20,
      ease: 'power2.out'
    });

    // Subtle animation for specialty badges
    gsap.from('.specialty-badge', {
      duration: 0.6,
      y: 10,
      opacity: 0,
      stagger: 0.1,
      delay: 0.3,
      ease: 'back.out'
    });
  });
</script>
